<div class="header-page">
   <h1 class="modif-form">Welcome to the event of <%= @event.user.first_name %> <%= @event.user.last_name %></h1>
</div>
<div class="big-box">
  <div class= "booking-box">
    <div class="booking-box-items">
      <div class="booking-img">
        <% if @event.picture? %>
          <%= cl_image_tag @event.picture.path, width: 250, height: 325, crop: :fill %>
        <% end %>
      </div>
      <div class="booking-form">
        <div class="booking-infos">
          <div class="booking-category">
            <p>Type: <%= @event.category.name %></p>
          </div>
          <div class="booking-date">
            <p> Date: <%= @event.date %></p>
          </div>
          <div class="bokking-description">
            <p>About: <%= @event.description %></p>
          </div>
          <div class="booking-tickets">
            <p>Tickets available: <%= @event.place %> tickets</p>
          </div>
          <div class="booking-price">
            <p>Price/unit: <%= @event.price %>,00 €</p>
          </div>
        </div>
        <div class="booking-inputs">
          <div class="form-for-booking">
            <%= simple_form_for([@event, @booking]) do |f| %>
              <%= f.error_notification %>
                <%= f.input :place, :label => "Tickets amount" %>
                <div class="booking-total-price">
                  <p>Total price : <%= @event.price %>,00 €</p>
                </div>
                <%= f.submit 'Book', class: "btn btn-danger"%>
                <%= link_to 'Back to events', events_path, class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="booking-info">
      <p>More information about the event</p>
    </div>
    <div class="google-map">
      <div id="map" style="width: 100%; height: 400px;"></div>
    </div>
    <div class="booking-picture">
      <p>More pictures about the event</p>
    </div>
  </div>
</div>
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(8);
        }
      });
    });
  <% end %>
<% end %>
