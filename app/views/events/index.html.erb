<!--Page title -->
<div class="header-page text-center">
  <% if @city.blank? && params[:search][:category_id].blank?%>
    <h1>Voici tous les events disponible dans le monde ( <%= @events.count %> ) </h1>
  <% elsif @city.blank?  %>
    <h1>Voici tous les events disponible dans la catégorie <%= @events.first.category.name %> ( <%= @events.count %> ) </h1>
  <% else %>
    <h1>Voici tous les events disponible proche de <%= @city %> ( <%= @events.count %> )</h1>
  <% end %>
</div>
<div class="container">
  <!--Display each event in a card -->
  <% @events.each do |event| %>
    <div class="card">
      <!-- Event header -->
      <div class="card-header">
        <div class="card-title">
          <h3><%= event.name %> - Category: <%= event.category.name %></h3>
        </div>
      </div>
      <!-- Event content -->
      <div class= "card-content">
        <div class="card-img">
          <% if event.picture? %>
            <%= cl_image_tag event.picture.path, width: 150, height: 150, crop: :fill %>
          <% end %>
        </div>
        <div class="card-spec">
          <div class="card-date">
            <p>Date: <%= event.date %></p>
          </div>
          <div class="card-place">
            <p>Entries available: <%= event.place %></p>
          </div>
          <div class="card-description">
            <p>About: <%= event.description %></p>
            <p><%= event.full_street_address %></p>
          </div>
          </div>
          <div class="card-price">
            <p>Price: <%= event.price %> €</p>
          </div>
          <div class="button-see-details">
            <p><%= link_to 'See details', new_event_booking_path(event.id), class: "btn btn-primary btn-center" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
